INSERT INTO `movies` (`id`, `movie_name`, `movie_languages`, `movie_genre`, `cast_crew`, `director`, `production_company`, `release_date`, `music_director`) VALUES ('1', 'Ponniyin Selvan 1', 'Tamil, English, Hindi, Malayalam, Gujarati, Marathi, Kannada, Telugu, Chinese, Japanese ', 'Fantasy, Drama, Comedy, Action', 'Ravi, Karthik, Vikram, Ishwarya Rai, Trisha, Sarathkumar, Prabhu, Parthiban, Prakash Raj, Kishore, Jeyaram', 'Manirathnam', 'LYCA Productions', '2022-09-30', 'AR Rahman');


/**
   HELPS TO UPDATE A MOVIE
*/
UPDATE `movies` SET `movie_genre` = 'Fantasy, Love, Action, Comedy' WHERE `movies`.`id` = 2;




