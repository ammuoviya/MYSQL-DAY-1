Create a new table:
CREATE TABLE `movies`.`movies` ( `id` INT NOT NULL AUTO_INCREMENT , `name` VARCHAR(150) NOT NULL , `genre` INT(50) NOT NULL , `release_date`
DATE NOT NULL , PRIMARY KEY (`id`)) ENGINE = MyISAM;


Insert data into table:
INSERT INTO `umovie` (`id`, `name`, `genre`, `release_date`) VALUES ('', 'Ponniyin Selvan 2(PS2)', 'Fantasy, Drama, Comedy, Action', '2022-10-22');
. 

UPDATE DATA IN TABLE: 
UPDATE umovie SET id = 2
WHERE name="Tron Man 2";

Delete Data from table:
DELETE
FROM umovie
WHERE name="Tron Man 2";

